<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Camera.CameraApi">

<TextureView
    android:id="@+id/texture"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/pic_imageView"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

<com.google.android.material.floatingactionbutton.FloatingActionButton
    android:id="@+id/btn_takepicture"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_centerHorizontal="true"
    android:src="@drawable/ic_camera_button_24dp"
    android:layout_marginBottom="24dp"
    android:scaleType="center"
    android:padding="0dp"
    app:backgroundTint="@color/colorWhite" />



    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/close_camera_floatAButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:backgroundTint="@color/colorWhite"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_dialog_close_light"
        android:focusable="true" />

    <ProgressBar
        android:id="@+id/camera_progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/btn_takepicture"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        />


</RelativeLayout>