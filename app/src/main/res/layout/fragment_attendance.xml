<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pclink.attendance.system.TabAttendanceLog.AttendanceFragment">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardElevation="2dp"
        android:layout_marginVertical="10dp"
        card_view:cardUseCompatPadding="true">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Log Type :"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:layout_margin="5dp"
            android:layout_marginVertical="5dp"
            />
        <Spinner
            android:id="@+id/log_menu_spinner"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginVertical="15dp"
            >
        </Spinner>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:layout_marginTop="70dp"
        android:id="@+id/log_list_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="5dp" />

    <ProgressBar

        android:id="@+id/loading_list_log_progressBar"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        style="@android:style/Widget.Holo.ProgressBar.Horizontal"
        android:indeterminate="true"
        android:layout_gravity="center"
        android:gravity="center" />
    <TextView
        android:id="@+id/empty_log_data_TxtView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:text=" Empty  "
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/colorPrimary"
        />
    <ImageView

        android:id="@+id/error_network_imgView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/ic_offline_nn"
        android:visibility="gone"
        />

</FrameLayout>
