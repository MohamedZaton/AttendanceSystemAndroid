<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_horizontal|center_vertical"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"

            android:clickable="true"
            android:gravity="center_horizontal|center_vertical"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/display_videoView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:cropToPadding="true"
                android:src="@drawable/ic_video_select" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_details_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/card_map_gView"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_margin="16dp"
                android:layout_marginTop="-13dp"
                android:layout_marginBottom="65dp"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignStart="@+id/card_details_card"
                        android:layout_marginLeft="1dp"
                        android:orientation="vertical"
                        android:padding="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableStart="@drawable/ic_file_name"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="Name"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/name_video_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_marginTop="2dp"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="2dp"
                                android:text=" " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_file_size"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"
                                android:text="Size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/size_video_textview"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center_vertical"
                                android:paddingLeft="2dp"
                                android:text=" " />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            android:paddingLeft="10dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:drawableLeft="@drawable/ic_file_type"
                                android:drawablePadding="5dp"
                                android:gravity="center_vertical"

                                android:text="Type"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/type_video_textView"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"

                                android:gravity="center_vertical"
                                android:text=" "

                                />

                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>



            </androidx.cardview.widget.CardView>

            <Button
                android:id="@+id/select_video_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btn_rounded"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:text="@string/select_video"
                android:textColor="@color/cloud_white">

            </Button>

            <Button
                android:id="@+id/upload_video_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:background="@drawable/btn_rounded"
                android:gravity="center"
                android:text="Upload Video"
                android:paddingHorizontal="5dp"
                android:textColor="@color/cloud_white">

            </Button>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>