<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Activities.OfflineUploadActivity">

    <LinearLayout
        android:id="@+id/sync_page_lylout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8">

            <LinearLayout
                android:id="@+id/sync_sub_page_relativelyt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="32dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/back_arrow_btn_image"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:layout_marginLeft="5dp"
                        android:src="@drawable/ic_left_arrow" />

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/sync_info_linear_layout"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="11"
                    android:layout_marginHorizontal="96dp"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:src="@drawable/ic_cloud"
                        />
                    <TextView
                        android:id="@+id/title_sync_txt"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:textStyle="normal"
                        android:textSize="48dp"
                        android:textColor="@color/cloud_white"
                        android:gravity="center"
                        android:text="@string/sync_title" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:text="@string/sync_info_offline"
                            android:textColor="@color/whiteGray"
                            android:textAlignment="center"
                            android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/sync_btn"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/sync_btn_orange"
                android:drawableLeft="@drawable/ic_synchronization_arrows"
                android:text="Sync"
                android:textSize="32dp"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="@+id/sync_sub_page_relativelyt"
                app:layout_constraintTop_toBottomOf="@+id/sync_sub_page_relativelyt"
                app:layout_constraintVertical_bias="0.535"
                tools:layout_editor_absoluteX="161dp"
                android:paddingHorizontal="48dp"
                android:layout_marginHorizontal="96dp"
                tools:ignore="MissingConstraints" />

            <ProgressBar
                android:id="@+id/loading_offline_progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="@+id/sync_btn"
                app:layout_constraintHorizontal_bias="0.497"
                app:layout_constraintStart_toStartOf="@+id/sync_btn"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="552dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

       <RelativeLayout
            android:id="@+id/bottom_gap_relalyout"
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="0.5">

       </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>