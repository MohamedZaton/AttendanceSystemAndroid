<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/continer_drawer_lyt"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

   <!--about layout-->
    <LinearLayout
        android:id="@+id/about_lyt"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
       >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="@string/about_name"
            android:textColor="@color/colorAccent"
            android:layout_gravity="top"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:textStyle="bold"
            android:text="@string/about_content"
            android:layout_gravity="left"
            android:paddingHorizontal="10dp"
            android:gravity="left|center_horizontal" />


    </LinearLayout>
    <!--help  ScrollView layout-->

        <ScrollView
            android:id="@+id/help_lyt_Scroll"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/browser_actions_text_color"
                        android:textStyle="bold"
                        android:text="@string/one_question"
                        android:layout_gravity="center_horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="5dp"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/one_answer"
                        android:gravity="center"
                        android:layout_marginBottom="10dp" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/browser_actions_text_color"
                        android:textStyle="bold"
                        android:text="@string/two_question"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/two_answer"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="10dp"

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/browser_actions_text_color"
                        android:textStyle="bold"
                        android:text="@string/three_question"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/three_answer"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_marginVertical="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/browser_actions_text_color"
                        android:textStyle="bold"
                        android:text="@string/four_question"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/darkgray"
                        android:textStyle="bold"
                        android:layout_gravity="center_horizontal"
                        android:text="@string/four_answer"
                        />


                </LinearLayout>

            </LinearLayout>



        </ScrollView>
    <!--super information -->
    <LinearLayout
        android:id="@+id/super_lyts_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginVertical="10dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/browser_actions_text_color"
                android:textStyle="bold"
                android:text="@string/super_title"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                />



        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            >

            <ProgressBar

                android:id="@+id/loading_super"
                style="@android:style/Widget.Holo.ProgressBar.Horizontal"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginStart="69dp"
                android:layout_marginTop="100dp"
                android:indeterminate="true"
                android:visibility="visible" />

        </RelativeLayout>
        <LinearLayout
            android:id="@+id/super_data_lyts"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:textColor="@color/colorAccent"
                android:text="@string/super_title"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:gravity="center"/>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/browser_actions_text_color"
                    android:textStyle="bold"
                    android:text="@string/s_name"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    />
                <TextView
                    android:id="@+id/name_super_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:gravity="left"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"

                    />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/browser_actions_text_color"
                    android:textStyle="bold"
                    android:text="@string/email_address"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/super_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/darkgray"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/browser_actions_text_color"
                    android:textStyle="bold"
                    android:text="@string/phone_number"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="left"
                    />
                <TextView
                    android:id="@+id/super_phone_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/darkgray"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="5dp"
                    android:layout_gravity="center_horizontal"
                    />


            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                />
        </LinearLayout>
    </LinearLayout>



    <!--main home -->
    <LinearLayout
    android:id="@+id/home_main_lyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
        android:visibility="gone"

    >
    <android.support.design.widget.TabLayout
        android:layout_marginTop="5dp"
        android:id="@+id/sluding_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:tabMode="fixed"
        android:drawSelectorOnTop="true"
        android:gravity="center_horizontal"
        android:background="@color/colorWhite"
        >

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/mein_viewpager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11"
        android:background="@color/colorWhite">

    </android.support.v4.view.ViewPager>

</LinearLayout>


    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@color/darkgray"
        app:menu="@menu/drawermenu"
        android:layout_gravity="start">
    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>